{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-run: debug",
      "type": "docker-run",
      "dockerRun": {
        "ports": [
          "5000:5000",
          "5001:5001"
        ],
        "volumes": [
          {
            "localPath": "${workspaceFolder}/Blockify",
            "containerPath": "/app"
          }
        ],
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development",
          "ASPNETCORE_URLS": "http://+:5000;https://+:5001"
        }
      },
      "netCore": {
        "appProject": "${workspaceFolder}/Blockify/Blockify.csproj",
        "enableDebugging": true
      }
    },
    {
      "label": "docker-compose: up",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "--build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "docker-compose: down",
      "type": "shell",
      "command": "docker-compose",
      "args": ["down"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "docker-compose: logs",
      "type": "shell",
      "command": "docker-compose",
      "args": ["logs", "-f"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}